<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

    <!-- views -->
    <definition name="main" template="/WEB-INF/views/main.jsp">
        <put-attribute name="header" value="/WEB-INF/views/includes/header.jsp" />
        <put-attribute name="leftPanel" value="/WEB-INF/views/includes/leftPanel.jsp" />
        <put-attribute name="content"  value="content" />
        <put-attribute name="footer" value="/WEB-INF/views/includes/footer.jsp" />
        <put-attribute name="page" value=""/>
    </definition>

    <!-- application -->
    <definition name="home"  extends="main">
        <put-attribute name="content" value="/WEB-INF/views/content/index.jsp"/>
        <put-attribute name="page" value="index"/>
    </definition>

    <definition name="projects"  extends="main">
        <put-attribute name="content" value="/WEB-INF/views/includes/content/projects.jsp"/>
        <put-attribute name="page" value="index"/>
    </definition>

    <definition name="contact"  extends="main">
        <put-attribute name="content" value="/WEB-INF/views/includes/content/contact.jsp"/>
        <put-attribute name="page" value="index"/>
    </definition>

    <definition name="testimonials"  extends="main">
        <put-attribute name="content" value="/WEB-INF/views/includes/content/testimonials.jsp"/>
        <put-attribute name="page" value="index"/>
    </definition>
	
	<definition name="page_not_found"  extends="main">
        <put-attribute name="content" value="/WEB-INF/views/page_not_found.jsp"/>
        <put-attribute name="page" value="index"/>
    </definition>

</tiles-definitions>
